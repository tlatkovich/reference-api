# EditorConfig helps maintain consistent coding styles between editors and IDEs
root = true

# General defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# XML and related files
[*.{xml,xsd,xslt,wsdl}]
indent_size = 4

# JSON files
[*.{json,jsonc}]
indent_size = 4

# YAML files - indentation matters
[*.{yml,yaml}]
indent_size = 2

# Markdown files - indentation matters
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off
